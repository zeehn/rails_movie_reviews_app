<section class="user">
  <%= profile_image(@user) %>
  <%= @user.username %>
  <h1><%= @user.name %></h1>
  <h2><%= mail_to(@user.email) %></h2>
  <h4>Member Since</h4>
  <p><%= @user.created_at.strftime("%B %Y") %></p>

  <% if current_user?(@user) %>
  <div class="actions">
    <%= link_to "Edit Account", edit_user_path(@user), class: "button edit" %>
    <%= link_to "Delete Account", user_path(@user), method: :delete, data: { confirm: 'Sure?!' }, class: "button delete" %>
  </div>
  <% end %>

  <% if @reviews.present? %>
    <h3>Reviews</h3>
    <% @reviews.each do |review| %>
      <div class="review">
        <div class="details">
          <span class="title">
            <%= link_to review.movie.title, review.movie %>
          </span>
          <%= render "shared/stars", percent: review.stars_as_percent %>
          <span class="date">
            <%= time_ago_in_words(review.created_at) %> ago
          </span>
          <p>
            <%= review.comment %>
          </p>
        </div>
      </div>
    <% end %>
  <% end %>

  <% if @favorite_movies.present? %>
  <h3>Favorite Movies</h3>
  <div class="favorite-movies">
    <% @favorite_movies.each do |movie| %>
      <%= link_to main_image(movie), movie %>
    <% end %>
  </div>
  <% end %>

</section>

